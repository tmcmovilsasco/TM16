<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_product_odoo_envioclick" model="ir.ui.view">
            <field name="name">product_product_odoo_envioclick</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='weight']" position="inside">
                    <field name="length" force_save="1"/>
                    <field name="height" force_save="1"/>
                    <field name="width" force_save="1"/>
                </xpath>
            </field>
    </record>
</odoo>